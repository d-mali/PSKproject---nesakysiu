@page "/ModParticipantPageModel"
@model Frontas.Pages.ModParticipantPageModel
@{
    ViewData["Title"] = "Redaguoti dalyv5";
}

<div class="container">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <p>@Model.ErrorMessage</p>
        </div>
    }
    else if (Model.ParticipantResponse != null)
    {
        <div class="modHead">
            <h1>Redaguoti dalyvį</h1>
            <form method="post" asp-page-handler="Delete" style="display: inline;">
                <input type="hidden" name="ParticipantResponse.Id" value="@Model.ParticipantResponse.Id" />
                <input type="hidden" name="EventId" value="@Model.EventId" />
                <input type="hidden" name="RequestMethod" value="DELETE" />
                <button type="submit" class="deleteHover">Ištrinti dalyvį iš duomenų bazės</button>
            </form>


        </div>

        <form method="post">
            <input type="hidden" name="ParticipantResponse.Id" value="@Model.ParticipantResponse.Id" />
            <div class="form-group">
                <label for="firstName">Vardas</label>
                <input type="text" id="firstName" name="ParticipantResponse.FirstName" class="form-control" value="@Model.ParticipantResponse.FirstName" required />
            </div>
            <div class="form-group">
                <label for="lastName">Pavardė</label>
                <textarea id="lastName" name="ParticipantResponse.LastName" class="form-control">@Model.ParticipantResponse.LastName</textarea>
            </div>
            <div class="form-group">
                <label for="birthDate">Gimimo data</label>
                <input type="date" id="birthDate" name="ParticipantResponse.BirthDate" class="form-control" value="@Model.ParticipantResponse.BirthDate.ToString("yyyy-MM-dd")" required />
            </div>
            <div class="form-group">
                <label for="email">El. paštas</label>
                <input type="email" id="email" name="ParticipantResponse.Email" class="form-control" value="@Model.ParticipantResponse.Email" required />
            </div>
            <button type="submit" class="btn btn-primary">Atnaujinti</button>
        </form>
    }
    else
    {
        <div class="alert alert-warning">
            <p>Event not found.</p>
        </div>
    }
</div>


