@page "/ModEventPageModel"
@model Frontas.Pages.ModEventPageModel
@{
    ViewData["Title"] = "Redaguoti Renginį";
}

<div class="container">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            <p>@Model.ErrorMessage</p>
        </div>
    }
    else if (Model.EventResponse != null)
    {
        <div class="modHead">
            <h1>Redaguoti Renginį</h1>
            <form method="post" asp-page-handler="Delete" style="display: inline;">
                <input type="hidden" name="EventResponse.Id" value="@Model.EventResponse.Id" />
                <button type="submit" class="deleteHover">Ištrinti</button>
            </form>
        </div>

        <form method="post">
            <input type="hidden" name="EventResponse.Id" value="@Model.EventResponse.Id" />
            <div class="form-group">
                <label for="title">Pavadinimas</label>
                <input type="text" id="title" name="EventResponse.Title" class="form-control" value="@Model.EventResponse.Title" required />
            </div>
            <div class="form-group">
                <label for="description">Aprašymas</label>
                <textarea id="description" name="EventResponse.Description" class="form-control">@Model.EventResponse.Description</textarea>
            </div>
            <div class="form-group">
                <label for="startDate">Pradžios data</label>
                <input type="date" id="startDate" name="EventResponse.StartDate" class="form-control" value="@Model.EventResponse.StartDate.ToString("yyyy-MM-dd")" required />
            </div>
            <div class="form-group">
                <label for="endDate">Pabaigos data</label>
                <input type="date" id="endDate" name="EventResponse.EndDate" class="form-control" value="@Model.EventResponse.EndDate.ToString("yyyy-MM-dd")" required />
            </div>
            <button type="submit" class="btn btn-primary">Atnaujinti</button>
        </form>
    }
    else
    {
        <div class="alert alert-warning">
            <p>Event not found.</p>
        </div>
    }
</div>


